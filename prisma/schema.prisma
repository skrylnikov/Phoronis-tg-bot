generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id BigInt @id

  firstName String?
  lastName  String?
  userName  String?
  metaInfo  Json?   @default("{}")

  Message Message[]
  Memory  Memory[]
}

enum ChatType {
  PRIVATE
  GROUP
}

model Chat {
  id BigInt @id

  title    String
  chatType ChatType

  name                  String?
  greeting              String?
  selfieSaturdayEnabled Boolean? @default(false)
  inktoberEnabled       Boolean? @default(false)

  Message Message[]
  Memory  Memory[]
}

enum MessageType {
  TEXT
  MEDIA
  VOICE
}

model Message {
  id BigInt

  chatId BigInt
  chat   Chat   @relation(fields: [chatId], references: [id])

  senderId BigInt
  sender   User   @relation(fields: [senderId], references: [id])

  sessionId        String?
  replyToMessageId BigInt?
  replyToMessage   Message? @relation("replies", fields: [replyToMessageId, chatId], references: [id, chatId])

  messageType MessageType

  text    String?
  media   String?
  summary String?
  sentAt  DateTime
  Replies Message[] @relation("replies")

  @@id([chatId, id])
  @@index([sessionId])
}

model Memory {
  id        BigInt   @id @default(autoincrement())

  userId    BigInt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  chatId    BigInt
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  content   String
  isUser    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, isUser])
  @@index([chatId, isUser])
}
