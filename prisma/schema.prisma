generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id BigInt @id

  firstName String?
  lastName  String?
  userName  String?
  metaInfo Json? @default("{}")

  Message Message[]
}

enum ChatType {
  PRIVATE
  GROUP
}

model Chat {
  id BigInt @id

  title    String
  chatType ChatType

  greeting String?

  Message Message[]
}

enum MessageType {
  TEXT
  MEDIA
  VOICE
}

model Message {
  id BigInt

  chatId BigInt
  chat   Chat   @relation(fields: [chatId], references: [id])

  senderId BigInt
  sender   User   @relation(fields: [senderId], references: [id])


  sessionId String?
  replyToMessageId BigInt?
  replyToMessage   Message? @relation("replies", fields: [replyToMessageId, chatId], references: [id, chatId])

  messageType MessageType

  text    String?
  media   String?
  summary String?
  sentAt  DateTime
  Replies Message[] @relation("replies")

  @@id([chatId, id])
  @@index([sessionId])
}
